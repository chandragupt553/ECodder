
@model Project.Models.Customer
@{
    ViewData["Title"] = "Customer";
}



<div class="container">
    <div class="row mt-lg-5">
        <div class="col-6 offset-3 border border-primary rounded pl-5 pr-5 pb-5">
            <div class="text-center">
                <h1 class="text-info">User SignUp Form</h1>
            </div>
            <form method="post" asp-controller="Account" asp-action="SignUp">
                  <div class="form-group">
                    <label asp-for="UFName">FirstName</label>
                    <input type="text"  asp-for="UFName" placeholder="Enter your Name" class="form-control" autocomplete="off" />
                    <span asp-validation-for="UFName" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label asp-for="ULName">LastName</label>
                    <input type="text" asp-for="ULName"  placeholder="Enter your Name" class="form-control" autocomplete="off" />
                    <span asp-validation-for="ULName" class="text-danger"></span>
                  </div>
               
                  <div class="form-group">
                    <label asp-for="MobileNumber"></label>
                    <input type="text" asp-for="MobileNumber" placeholder="Enter your MobileNo" class="form-control" autocomplete="off" />
                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                  </div>
                  
                  <div class="form-group">
                    <label asp-for="UEmail">Email-Id</label>
                    <input type="text" asp-for="UEmail"  placeholder="Enter your EmailId" class="form-control" autocomplete="off" />
                    <span asp-validation-for="UEmail" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label asp-for="UPassword">Password</label>
                 <input type="text" asp-for="UPassword" placeholder="Enter your password" class="form-control" autocomplete="off" />
                 <span asp-validation-for="UPassword" class="text-danger"></span>
                  </div>

                  <div class="form-group">
                    <input  type="submit" class="btn btn-success btn-lg mb-1 float-right" value="Sign Up" />
                  </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
